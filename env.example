# Broker API Credentials
# -----------------------
# Tinkoff broker
TINKOFF_TOKEN=
TINKOFF_ACCOUNT=

# BCS broker
BCS_TOKEN=
BCS_ACCOUNT=

# Database Configuration
# -----------------------
DATABASE_URL=sqlite:///data/trading.db

# Web Interface Configuration
# -----------------------
# Secret key for session management
SECRET_KEY=generate_a_secure_random_key
# Secret key for JWT tokens
JWT_SECRET_KEY=generate_a_secure_random_key_for_jwt
# Server host (0.0.0.0 allows external connections)
HOST=0.0.0.0
# Server port
PORT=5000
# Debug mode (set to False in production)
DEBUG=False

# Redis Configuration
# -----------------------
# Redis host (in docker this should be the service name)
REDIS_HOST=redis
# Redis port
REDIS_PORT=6379
# Redis database number
REDIS_DB=0
# Redis password (if authentication is enabled)
REDIS_PASSWORD=

# Logging Configuration
# -----------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Log directory (relative to application root)
LOG_DIR=logs

# Worker Configuration
# -----------------------
# Number of worker processes for Gunicorn
WORKERS=4
# Run database migrations on startup
RUN_MIGRATIONS=true

# Email Notifications
# -----------------------
# SMTP server
SMTP_SERVER=
# SMTP port
SMTP_PORT=587
# SMTP username
SMTP_USERNAME=
# SMTP password
SMTP_PASSWORD=
# Sender email address
EMAIL_FROM=
# Recipient email addresses (comma-separated)
EMAIL_TO=

# Telegram Notifications
# -----------------------
# Telegram bot token
TELEGRAM_BOT_TOKEN=
# Telegram chat ID to send notifications to
TELEGRAM_CHAT_ID= 